########################################
# General
########################################

NODE_ENV=development
PORT=3000


########################################
# Database
########################################
# Example only â€” replace with your own database URL
# For local development, you may use PostgreSQL or SQLite

DATABASE_URL=postgresql://USER:PASSWORD@HOST:PORT/DATABASE


########################################
# Spotify API (Required for playlist features)
########################################
# Create credentials at: https://developer.spotify.com/dashboard

SPOTIFY_CLIENT_ID=your_spotify_client_id_here
SPOTIFY_CLIENT_SECRET=your_spotify_client_secret_here
SPOTIFY_REDIRECT_URI=http://localhost:3000/auth/spotify/callback


########################################
# Authentication / Sessions (if applicable)
########################################
# Use a long, random string for local development

SESSION_SECRET=replace_with_random_string


########################################
# Feature Flags (optional / future)
########################################

FEATURE_SPOTIFY_PLAYLISTS=true
FEATURE_EXPERIMENTAL=false
